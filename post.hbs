{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<div class="container">
<div class="row">
<div class="col-lg-8 col-lg-offset-2">

<article class="{{post_class}}">
<h1 class="post-head text-center">{{title}}</h1>
<br />

<section class="text-center">
<span class="post-author">Written by {{#author}}<a href="{{url}}" rel="author">{{name}}</a>{{/author}}</span>
{{#if tags}}<span class="post-tags"> in <a href="{{@blog.url}}/tag/{{tags.[0].slug}}">{{tags.[0].name}}</a></span>{{/if}} <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-calendar" aria-hidden="true"></i> {{date format="DD MMMM YYYY"}}</time>
</section>
<hr>

<section class="post-content">
{{content}}
</section>
<br />
<br />
<hr>

<div class="post-nav text-center">
{{#next_post}}
<p>What's Next? - <a href="{{url}}">{{title}}</a></p>
{{else}}
<p>Oops No more New posts! Goto &rarr; <a href="{{@blog.url}}">Homepage</a></p>
{{/next_post}}
</div>
<hr>

<center>
<div class="sharebuttons btn-group btn-group-lg">
<a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" class="btn btn-twitter" target="_blank"><i class="fa fa-twitter"></i> <span>Tweet</span></a>
<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" class="btn btn-facebook" target="_blank"><i class="fa fa-facebook"></i> <span>Share</span></a>
<a href="https://plus.google.com/share?url={{url absolute="true"}}" class="btn btn-google" target="_blank"><i class="fa fa-google-plus"></i> <span>Plus</span></a>
</div>
</center>
<br />

<center>
<div class="msg-box">
<p>Add you own custom Text on this Message box by editing the <b>post.hbs</b> File </p>
</div>
</center>
<br />

</article>
</div>
</div>
</div>


<!-- Floating Share Bar -->
<div id="shares" class="shares-left hide-on-mobile" style="top: 140px; margin-left: -510px; position: fixed; opacity: 0;">
<ul class="share-list">
<li class="share facebook"><a class="url" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"><i class="fa fa-facebook"></i></a></li>
<li class="share twitter"><a class="url" target="_blank" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"><i class="fa fa-twitter"></i></a></li>
<li class="share googleplus"><a class="url" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><i class="fa fa-google-plus"></i></a></li>
</ul>
</div>


{{/post}}
